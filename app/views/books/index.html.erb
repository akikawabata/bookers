
<!--タイトル表示-->
  <h1>Books</h1>

 <!--ブック一覧-->
<table>
　  <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
           <% @books.each do |book| %>

  <tbody>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
　　  <td><a href="/books/<%= book.id %>">show</a></td>
　　  <td><a href="/books/<%= book.id %>/edit">Edit</a></td>
　    <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
          <% end %>
    </tr>
  </tbody>
</table>

 <!--サブタイトル-->

    <h2>New Book</h2>
 <!--エラー表示-->
　　　　 　<% if @book.errors.any? %>
 　　　　 　　　 <%= @book.errors.count %>errors prohibited this book from being saved:
     <ul>
          <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
          <% end %>
     </ul>
          <% end %>


<%= form_with model: @book do |f| %>

 <!--タイトル入力-->
  <div class ="field">
          <%= f.label :title %><!--最初の先頭の文字がTitle<label for="book_title">Title</label>-->
          <%= f.text_field :title %>
 </div>

 <!--ボディ入力-->
 <div class ="field">
          <%= f.label :body %>
          <%= f.text_area :body %>
 </div>

  <!--ボタン-->
<div><%= f.submit 'Create Book' %></div>
</div>
　　　　　<% end %>
<!--do〜endまでの送信されたデータが格納できるようになる-->


